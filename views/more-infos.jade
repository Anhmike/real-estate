mixin advert(name, location, description, image, id, available_date, price)
	.row.featurette
		.col-md-7
			h2.featurette-heading #{name}: 
				span.text-muted #{location}
			p.lead #{description}
			p.lead #{price} â‚¬
			p.lead Available date : #{available_date}
		.col-md-5
			img.featurette-img.img-responsive(src="#{image}", alt='a picture of this advert')
		hr.row.featurette
		

